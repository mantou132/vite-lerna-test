{
  "compilerOptions": {
    "baseUrl": "./",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["es2018", "dom", "DOM.Iterable"]
  },
  "include": ["src"],
  "exclude": ["dist"]
}
